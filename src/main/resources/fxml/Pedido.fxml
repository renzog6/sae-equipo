<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ar.nex.pedido.PedidoController">
    <center>

        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
            <children>
                <TableView fx:id="table" layoutX="-9.0" layoutY="14.0" onMouseClicked="#showOnClick" prefHeight="358.0" prefWidth="417.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="colFecha" maxWidth="100.0" minWidth="80.0" prefWidth="90.0" text="Fecha" />
                        <TableColumn fx:id="colRepuesto" prefWidth="102.0" text="Repuesto" />
                        <TableColumn fx:id="colCantidad" maxWidth="90.0" minWidth="70.0" text="Cantidad" />
                        <TableColumn fx:id="colProveedor" prefWidth="102.0" text="Proveedor" />
                        <TableColumn fx:id="colEstado" maxWidth="100.0" minWidth="70.0" text="Estado" />
                        <TableColumn fx:id="colObeservacion" prefWidth="102.0" text="Obeservacion" />
                        <TableColumn fx:id="colAccion" maxWidth="100.0" minWidth="80.0" prefWidth="100.0" styleClass="colAccion" text="Accion" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>

    </center>
    <top>          
        <AnchorPane nodeOrientation="RIGHT_TO_LEFT" prefHeight="50.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="searchBox" layoutX="127.0" layoutY="13.0" onInputMethodTextChanged="#Search" onKeyReleased="#Search" prefHeight="25.0" prefWidth="206.0" promptText="Buscar" />
                <Button fx:id="signOut" alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="26.0" layoutY="13.0" mnemonicParsing="false" onAction="#goSignOut" text="Salir" />
            <Label layoutX="508.0" layoutY="12.0" nodeOrientation="LEFT_TO_RIGHT" text="Lista de Pedidos">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <ComboBox fx:id="filtroEstado" layoutX="350.0" layoutY="13.0" prefWidth="150.0" />
            </children>
        </AnchorPane>       
    </top>
   
</BorderPane>
